node {
    // This displays colors using the 'xterm' ansi color map.
    ansiColor('xterm') {
        // Just some echoes to show the ANSI color.
        stage "\u001B[31mI'm Red\u001B[0m Now not"
    }
}

def str_name = 'This is function fn1.'
def  fn1(str_name) {
  echo "$str_name"
}

node {

    def build_url = "${env.BUILD_URL}"
    stage ('one') {
       fn1(str_name)
       echo "${build_url}"
    }
}